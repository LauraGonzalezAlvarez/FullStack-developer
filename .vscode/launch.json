    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Index.ts con TSNode",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
            "args": ["src/index.ts"],
            "cwd": "${workspaceRoot}/Frontend/TS",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [ // Los archivos que queremos bviar
                "<node_internals>/**",
                "node_modules/**"
            ],
            
        }
    ]
}